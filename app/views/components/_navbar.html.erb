	<% end %>
	<div class="dropdown">
		<%= link_to "Radio y TV", stations_path, class: "navbar__link" %>
		<div class="dropdown__options">
			<p class="dropdown__section">Radio</p>
			<% get_radio_stations.each do |radio| %>

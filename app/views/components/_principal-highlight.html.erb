<div class="principal-highlight">
	<%= link_to article, class: "principal-highlight__image" do %>
		<%= image_tag article.image %>
		<% if article.exclusive? %>
			<p class="exclusive">EXCLUSIVA</p>
		<% end %>
	<% end %>
	<div class="article-preview__info principal-highlight__info">
		<%= link_to article do %>
			<h4 class="title semibold jtextfill"><span><%= article.name %></span>	</h4>	
			<% if article.section != nil %>
				<p class="section-and-author"><span class="section"><%= article.section %></span> - 
			<% end %>
			<% if article.scheduled_time? %>
				
				<span class="datetime"><%= distance_of_time_in_words(Time.now, (article.scheduled_time)) %></span>
			<% else %>
				<span class="datetime"><%= distance_of_time_in_words(Time.now, (article.created_at)) %></span>
			<% end %>

			<% if article.author and article.author.name != "Ninguno" %>
				<span class="author">Por <%= article.author.name %></p>

			<% else %>
				<% if article.user %>
					<span class="author">Por <%= article.user.full_name %></p>
				<% end %>
			<% end %>
 	
			<hr class="line">
			<p class="short-description"><%= truncate(article.short_description, length: 240) %></p> 	
		<% end %>
		<%= render "components/social-media-links", article: article %>
	</div>
</div>
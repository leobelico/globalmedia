<% cache article do %>
  <div class="principal-highlight">
    <%= link_to(safe_article_path(article), class: "principal-highlight__image") do %>
      <%= image_tag(safe_image(article)) %>
      <% if article_exclusive?(article) %>
        <p class="exclusive">EXCLUSIVA</p>
      <% end %>
    <% end %>

    <div class="article-preview__info principal-highlight__info">
      <%= link_to(safe_article_path(article)) do %>
        <h4 class="title semibold jtextfill">
          <span><%= safe_article_name(article) %></span>
        </h4>

        <p class="section-and-author">
          <span class="section"><%= safe_section_name(article) %></span> -
          <span class="datetime"><%= safe_article_time(article) %></span>
        </p>

        <hr class="line">

        <p class="short-description"><%= safe_short_description(article) %></p>
      <% end %>

      <div class="social-media" data-article="<%= safe_article_path(article) %>">
        <%= link_to("whatsapp://send?text= Estoy leyendo en GlobalMedia: #{safe_article_path(article)}", data: { action: "share/whatsapp/share" }, class: "social-media__link whatsapp", target: "_blank") do %>
          <%= image_tag "whatsapp.svg" %>
        <% end %>

        <a class="social-media__link facebook" target="_blank" onclick="shareToFacebook(event);">
          <%= image_tag "facebook.svg" %>
        </a>

        <a href="https://twitter.com/share?url=<%= CGI.unescape(safe_article_path(article)) %>&via=GlobalMediaMx&text=<%= safe_article_name(article) %>" class="social-media__link twitter" target="_blank">
          <%= image_tag "twitter.svg" %>
        </a>

        <a class="social-media__link copy" target="_self" data-clipboard-text="<%= CGI.unescape(safe_article_path(article)) %>">
          <input class="hidden" value="<%= safe_article_path(article) %>">
          <%= image_tag "copy.svg" %>
        </a>
      </div>
    </div>
  </div>
<% end %>

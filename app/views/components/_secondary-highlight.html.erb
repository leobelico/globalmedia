<div class="secondary-highlight">
	<%= link_to article, class: "image-link" do %>
		<%= image_tag article.image, class: "secondary-highlight__image" %>
		<% if article.exclusive? %>
			<p class="exclusive">EXCLUSIVA</p>
		<% end %>
	<% end %>
	<div class="article-preview__info">
		<%= link_to article, class: "ainf" do %>

			<h4 class="title semibold"><%= article.name %></h4>	
			<% if article.articable %>
				<p class="section-and-author"><span class="section"><%= article.articable.name %></span> - 
			<% end %>
			<% if article.published_at? %>
				<span class="datetime"><%= distance_of_time_in_words(Time.now, (article.published_at)) %></span>
			<% else %>
				<span class="datetime"><%= distance_of_time_in_words(Time.now, (article.created_at)) %></span>
				
			<% end %>

				

				
			<hr class="line">
			<p class="short-description"><%= truncate(article.short_description, length: 120) %></p> 	
		<% end %>
	</div>
	<div class="social-media" data-article="<%= article_url(article) %>">
		<%= link_to ("whatsapp://send?text= Estoy leyendo en GlobalMedia: " + article_url(article)), data: { action: "share/whatsapp/share" }, class: "social-media__link whatsapp", target: "_blank" do %>
			<%= image_tag "whatsapp.svg" %>
		<% end %>
		<a class="social-media__link facebook" target="_blank" onclick="shareToFacebook(event);">
			<%= image_tag "facebook.svg" %>				
		</a>	

		<a href="https://twitter.com/share?url=<%= url_encode(article_url(article)) %>&via=GlobalMediaMx&text=<%= article.name %>" class="social-media__link twitter" target="_blank">
			<%= image_tag "twitter.svg" %>
		</a>
		<a class="social-media__link copy" target="_self" data-clipboard-text="<%= CGI.unescape(article_url(article)) %>">
			<input class="hidden" value="<%= article_url(article) %>">
			<%= image_tag "copy.svg" %>
		</a> 
	</div>
</div>
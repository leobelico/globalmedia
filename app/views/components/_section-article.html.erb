<div class="section-article">
	<% if article.section == "Denuncia Global" or article.section == "DENUNCIA GLOBAL" %>
		<iframe width="208.67" height="140" src="<%= article.video_url %>" frameborder="0" allowfullscreen></iframe>
	<% else %>
		<%= link_to article, class: "sa-img-link" do %>
			<%= image_tag article.image, class: "section-article__image" %>
			<% if article.exclusive? %>
				<p class="exclusive">EXCLUSIVA</p>
			<% end %>
		<% end %>
	<% end %>

	<%= link_to article, class: "section-article__info" do %>
		<h4 class="small-title semibold"><%= article.name %></h4>	
		<p class="section-and-author"><span class="section"><%= article.section %></span> - 
			<% if article.author and article.author.name != "Ninguno" %>
				<span class="author">Por <%= article.author.name %></p>

			<% else %>
				<span class="author">Por <%= article.user.full_name %></p>
			<% end %>
		<p class="datetime">Hace <%= distance_of_time_in_words(Time.now, (article.created_at)) %></p>
		<p class="short-description"><%= truncate(article.short_description, length: 120) %></p> 	
	<% end %>
	<%= render "components/social-media-links", article: article %>
</div>
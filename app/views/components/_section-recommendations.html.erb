<div class="section-recommendations">
	<% if articles.first %>
		<%= link_to section_path(articles.first.articable.name), class: "skewed-title" do %>
			<div class="skews">
				<div class="skew skew--gray"></div>
				<div class="skew skew--blue"></div>
				<div class="skew skew--black"></div>
			</div>
			<div class="sk__title" style="background-color: <%= articles.first.section_color %>"><%= section_name %></div>
			<div class="sk__link" style="background-color: <%= articles.first.section_color %>">Ir a secci√≥n</div>
		<% end %>
	<% end %>
	<% articles.each do |article| %>
		<div class="section-recommendations__article ui-card">
			<%= link_to article, class: "wrapper-link" do %>
				<%= image_tag article.image, class: "section-recommendations__image" %>
				<% if article.exclusive? %>
					<p class="exclusive">EXCLUSIVA</p>
				<% end %>
				<h4 class="small-title"><%= article.name %></h4>
			<% end %>
			<div class="social-media" data-article="<%= article_url(article) %>">
				<%= link_to ("whatsapp://send?text= Estoy leyendo en GlobalMedia: " + article_url(article)), data: { action: "share/whatsapp/share" }, class: "social-media__link whatsapp", target: "_blank" do %>
					<%= image_tag "whatsapp.svg" %>
				<% end %>
				<a class="social-media__link facebook" target="_blank" onclick="shareToFacebook(event);">
					<%= image_tag "facebook.svg" %>				
				</a>	

				<a href="https://twitter.com/share?url=<%= url_encode(article_url(article)) %>&via=GlobalMediaMx&text=Estoy%20leyendo%20en%20GlobalMedia%3A%20-" class="social-media__link twitter" target="_blank">
					<%= image_tag "twitter.svg" %>
				</a>
				<a class="social-media__link copy" target="_self" data-clipboard-text="<%= article_url(article) %>">	
					<input class="hidden" value="<%= article_url(article) %>">
					<%= image_tag "copy.svg" %>
				</a> 
			</div>
		</div>
	<% end %>
</div>
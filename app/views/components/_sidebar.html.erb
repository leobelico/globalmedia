<div class="sidebar">
	<%= render "components/latest-news", articles: latest_news %>
	<% if article != "global" %>
		<% if  get_recommendations_per_section(Section.find_by_name(article.section).id).size == 0 %>
			<%= render "components/recommendations", articles: get_global_recommendations %>
		<% else %>
			<%= render "components/recommendations", articles: get_recommendations_per_section(Section.find_by_name(article.section).id) %>
		<% end %>
		
	<% else %>
		<%= render "components/recommendations", articles: get_global_recommendations %>
		
	<% end %>
	<% if article != "" and article != "global" %>
		<%= render "components/most-visited", articles: most_visited(Section.find_by_name(article.section).id) %>
	<% else %>
		<%= render "components/most-visited", articles: most_visited(3) %>
	<% end %>
	<% if banner != "" and banner != nil %>
		<%= render "components/medium-banner", banner: banner %>
	<% end %>
</div>
	
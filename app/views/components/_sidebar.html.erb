<div class="sidebar">
	<% if true %>
	<% cache  "recent_articles" do %>
		<%= render "components/latest-news",articles: latest_news %>
	<% end %>
	<% end %>
	<% if true %>
		<% cache  "global_recommendations" do %>
			<%= render "components/recommendations", articles: get_global_recommendations %>
		<% end %>	
		<% if article != "" and article != "global" %>
			<% cache("most_visited", expires_in: 2.hour) do %>
				<%= render "components/most-visited", articles: most_visited(Section.find(article.articable_id)) %>
			<% end %>
		<% else %>
			<% cache("most_visited", expires_in: 2.hour) do %>
				<%= render "components/most-visited", articles: most_visited(3) %>
			<% end %>
		<% end %>
		<% if banner != "" and banner != nil %>
			<%= render "components/medium-banner", banner: banner %>
		<% end %>
		<br>
	<% end %>
	<% if  article != "" and article != "global" and article.articable.facebook? %>
		<div class="fb-page" data-href="<%= article.articable.facebook %>" data-tabs="timeline" data-width="342" data-small-header="true" data-adapt-container-width="true" data-hide-cover="true" data-show-facepile="false"><blockquote cite="https://www.facebook.com/GlobalMediaSLP" class="fb-xfbml-parse-ignore"><a href="https://www.facebook.com/GlobalMediaSLP"></a></blockquote></div>
	<% else %>
		<div class="fb-page" data-href="https://www.facebook.com/GlobalMediaSLP" data-tabs="timeline" data-width="342" data-small-header="true" data-adapt-container-width="true" data-hide-cover="true" data-show-facepile="false"><blockquote cite="https://www.facebook.com/GlobalMediaSLP" class="fb-xfbml-parse-ignore"><a href="https://www.facebook.com/GlobalMediaSLP"></a></blockquote></div>
	<% end %>

	
</div>

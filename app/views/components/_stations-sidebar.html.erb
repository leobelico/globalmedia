<div class="sidebar">
	<%= render "components/recommendations", articles: get_global_recommendations %>

	<% if facebook == "" or facebook == nil %>
		<div style="margin-top: 8px; display:  block;"></div>
		<div class="fb-page" data-href="https://www.facebook.com/GlobalMediaSLP" data-tabs="timeline" data-width="342" data-small-header="false" data-adapt-container-width="true" data-hide-cover="false" data-show-facepile="true"><blockquote cite="https://www.facebook.com/GlobalMediaSLP" class="fb-xfbml-parse-ignore"><a href="https://www.facebook.com/GlobalMediaSLP"></a></blockquote></div>
	<% else %>	
		<div class="fb-page" data-href="<%= facebook %>" data-tabs="timeline" data-width="342" data-small-header="false" data-adapt-container-width="true" data-hide-cover="false" data-show-facepile="true"><blockquote cite="<%= facebook %>" class="fb-xfbml-parse-ignore"><a href="<%= facebook %>"></a></blockquote></div>
	<% end %>	
	<% if twitter == "" or twitter == nil %>
		<a class="twitter-timeline" data-width="342" data-height="500" data-theme="light" href="https://twitter.com/Globalmediamx">Tweets by Globalmediamx</a> <script async src="//platform.twitter.com/widgets.js" charset="utf-8"></script>
	<% else %>
		<a class="twitter-timeline" data-width="342" data-height="500" data-theme="light" href="<%= twitter %>">Tweets by Globalmediamx</a> <script async src="//platform.twitter.com/widgets.js" charset="utf-8"></script>
	<% end %>	
</div>
<div class="section-preview">

	<%= link_to section_path(articles.first.section_slug), class: "sp__header " do %>
		<div class="skews">
			<div class="sp__skew sp__skew-1"></div>
			<div class="sp__skew sp__skew-2"></div>
			<div class="sp__skew sp__skew-3"></div>
		</div>
		<div class="sp__name" style="background-color: <%= articles.first.section_color %>"><%= articles.first.section_name %></div>
		<p class="sp__link" style="background-color: <%= articles.first.section_color %>"><%= articles.first.section_description %></p>
	<% end %>
	<div class="sp__articles">

		<% articles.each do |article|%>	
			<div class="sp__article ui-card">
				<%= link_to article_path(article.article_slug), class: "sp__image-link" do %>
					<% if article.article_exclusive? %>
						<p class="exclusive">EXCLUSIVA</p>
					<% end %>

					<% if article.article_image %>
						<%= image_tag article.article_image, class: "sp__image" %>
					<% end %>
				<% end %>
				<div class="sp__info">
					
					<%= link_to article_path(article.article_slug) do %>
						<h4 class="small-title"><%= article.name %></h4>
					<% end %>
					<% article ||=  "nuva.rocks" %>

					<div class="social-media" data-article="<%= article_url(article.article_slug) %>">
						<%= link_to ("whatsapp://send?text= Estoy leyendo en GlobalMedia: " + article_url(article.article_slug)), data: { action: "share/whatsapp/share" }, class: "social-media__link whatsapp", target: "_blank" do %>
							<%= image_tag "whatsapp.svg" %>
						<% end %>
						<a class="social-media__link facebook" target="_blank" onclick="shareToFacebook(event);">
							<%= image_tag "facebook.svg" %>				
						</a>	

						<a href="https://twitter.com/share?url=<%= url_encode(article_url(article.article_slug)) %>&via=GlobalMediaMx&text=Estoy%20leyendo%20en%20GlobalMedia%3A%20-" class="social-media__link twitter" target="_blank">
							<%= image_tag "twitter.svg" %>
						</a>
						<a class="social-media__link copy" target="_self" data-clipboard-text="<%= article_url(article.article_slug) %>">	
							<input class="hidden" value="<%= article_url(article.article_slug) %>">
							<%= image_tag "copy.svg" %>
						</a> 
					</div>

				</div>
			</div>
		<% end %>
	</div>
</div>
<script src="https://cdn.quilljs.com/1.3.6/quill.js"></script>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<script>
  // Define el editor como variable global
  window.editor = new Quill('#note-editor', {
    theme: 'snow',
    modules: {
      toolbar: [
        [{ 'header': [1, 2, 3, false] }],
        ['bold', 'italic', 'underline', 'strike'],
        [{ 'list': 'ordered'}, { 'list': 'bullet' }],
        ['link', 'image'],
        ['clean']
      ]
    },
    placeholder: 'Escribe el contenido de tu artículo aquí...'
  });

  // Contenido existente
  <% if @article.note.present? %>
    window.editor.root.innerHTML = `<%= j @article.note.html_safe %>`;
  <% end %>

  // Manejo del envío del formulario
  document.querySelector('form.directUpload').onsubmit = function() {
    var content = document.querySelector('#article_note');
    content.value = window.editor.root.innerHTML;
    return true;
  };

  // Sobrescribe la función submit_form para usar window.editor
  if(typeof submit_form === 'function') {
    var originalSubmitForm = submit_form;
    submit_form = function(t, e, n, r) {
      console.log($("#article_articable_id").val());
      console.log(window.editor.getContents());
      console.log(window.editor.getText());
      
      var i = window.editor.getContents(),
          o = window.editor.getText();
      
      // Resto de tu lógica original...
      return originalSubmitForm(t, e, n, r);
    };
  }

  // Límite de caracteres
  (function() {
    var maxChars = {
      name: 80,
      short_description: 120
    };

    $('#article_name').on('input', function() {
      if ($(this).val().length > maxChars.name) {
        $(this).val($(this).val().substring(0, maxChars.name));
      }
    });

    $('#article_short_description').on('input', function() {
      if ($(this).val().length > maxChars.short_description) {
        $(this).val($(this).val().substring(0, maxChars.short_description));
      }
    });
  })();

  // Vista previa de imágenes
  $("input[type=file]").each(function() {
    var $input = $(this);
    if ($input.parents(".field").find("img").length === 0) {
      $input.before('<img class="form__image-preview">');
    }

    $input.change(function() {
      if (this.files && this.files[0]) {
        var reader = new FileReader();
        reader.onload = function(e) {
          $input.parents(".field").find("img")
            .attr('src', e.target.result)
            .css("display", "block");
        };
        reader.readAsDataURL(this.files[0]);
      }
    });
  });
</script>


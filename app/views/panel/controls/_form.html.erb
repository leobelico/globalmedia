<%= form_for [:panel, @control], html: { class: "card admin-form" } do |f| %>
	<% if @control.errors.any? %>	
		<h5 class="small-title"><%= pluralize(@control.errors.count, "errores") %></h5>
			<ul class="errors">
				<% @control.errors.full_messages.each do |msg| %>
						<li><%= msg %></li>
				<% end %>
			</ul>
	<% end %>
	
	<div class="field field--datetime">
		<label>Fecha de Inicio</label>
		<div class="field">
			
			<%= f.datetime_select :init_date%>
		</div>
	</div>
	
	<div class="field field--datetime">
		<label>Fecha de Fin </label>
		<div class="field">
			<%= f.datetime_select :end_date%>
		</div>
	</div>

	<div class="field field--string">
		<label>Nombre del Cliente</label>
		<%= f.text_field :client_name %>
	</div>
	<div class="field field--string">
		<label>Nombre del Evento</label>
		<%= f.text_field :event_name %>
	</div>
	
	<div class="field field--string">
		<label>Dirección del Evento</label>
		<%= f.text_field :event_address %>
	</div>
	
	<div class="field field--string">
		<label>Nombre de Estación</label>
		<%= f.text_field :station_name %>
	</div>	
	<div class="field field--string">
		<label>Número de Unidad</label>
		<%= f.text_field :unit_name %>
	</div>
	<div class="field field--string">
		<label>Técnicos</label>
		<%= f.text_area :techs %>
	</div>

	<div class="field field--string">
		<label>Nombre del Agente de Venta</label>
		<%= f.text_field :agent_name %>
	</div>
	
	<div class="field field--string">
		<label>Estado de Contrato:</label>
		<%= f.select(:contract_state, [ "Realizado", "Por Realizar", "Cancelado"], {}, { class: "" }) %>
	</div>
	
	<div class="field field--string">
		<label>Número de Contrato</label>
		<%= f.text_field :contract_number %>
	</div>
	
	<div class="field field--string">
		<label>Hoja de datos:</label>
		<%= f.check_box :datasheet %>
			
	</div>


	<div class="field field--string">
		<label>Observaciones</label>
		<%= f.text_area :observations%>
	</div>
	
	
	
	
<% end %>
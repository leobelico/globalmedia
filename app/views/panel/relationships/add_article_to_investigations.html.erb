<div class="panel__header">
	<h2 class="title panel__title"><span><%= "Colaborador" if @investigation.relationship_type == "Collaborator" %></span> / <span class="current"><%= @investigation.name%></span></h2>
	<div class="panel__actions">
		<button class="button">Añadir artículo</button>
	</div>
</div>
<%= form_for :panel, html: { class: "admin-form card" }, url: {controller: "panel/relationships", action: 'set_investigation_articles'} do |f| %>
	<div class="field">
		
		<label>Artículo</label>
		<%= f.autocomplete_field(:first_article_id, autocomplete_article_name_panel_articles_path, :id_element => '#first_article_id', class: "search-bar", placeholder: "Buscar Artículo", type: "search" ) %>
		<%= f.hidden_field :first_article_id, id: "first_article_id" %>
		<%= f.hidden_field :investigation_id, value: @investigation.id %>
	</div>
	<% f.submit %>
<% end %>
<script>
	saveFormOnButtonClick($("button.button"), $("form"));
</script>

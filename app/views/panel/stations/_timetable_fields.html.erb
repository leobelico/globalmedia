<div class= "field-builder card">
	<div class="create__field-container">
		<div class="field">
			<label>Nombre del Programa</label>
			<%= f.text_field :name %>
		</div>
		<div class="field">
			<label>Locutores</label>
			<%= f.text_field :broadcasters %>
		</div>
		<div class="multifield">
			<div class="timefield">
				<label>Hora de Inicio: </label>
				<div class="field">
					<%= f.time_select :streaming_hour, default: {hour:"00", minute: "00"} %> 
				</div>
			</div>
			<div class="timefield">
				<label>Hora de Fin: </label>
				<div class="field">					
					<%= f.time_select :end_streaming_hour, default: {hour: "01", minute: "00"} %> 
				</div>
			</div>
		</div>

		<div class="field">	
			<label>Días de la semana: </label>
		</div>
		<div class="field field--checkbox">
			<%= f.check_box :monday %> 
			<label>Lunes</label> 
		</div>
		<div class="field field--checkbox">
			<%= f.check_box :tuesday %> 
			<label>Martes</label> 
			
		</div>
		<div class="field field--checkbox">
			<%= f.check_box :wednesday %> 
			<label>Miércoles</label> 
			
		</div>
		<div class="field field--checkbox">
			
			<%= f.check_box :thursday %> 
			<label>Jueves</label> 
		</div>
		<div class="field field--checkbox">
			<%= f.check_box :friday %> 
			<label>Viernes</label> 
			
		</div>
		<div class="field field--checkbox">
			<%= f.check_box :saturday %> 
			<label>Sábado</label> 
			
		</div>
		<div class="field field--checkbox">
			<%= f.check_box :sunday %> 
			<label>Domingo</label>
			
		</div>
		<div class="field">
			<label>Imagen para banner programático:</label>
			<%= f.file_field :image %>
		</div>
		<div class="field">
			<label>Imagen de locutor:</label>
			<%= f.file_field :broadcaster_image %>
		</div>
		<%= f.hidden_field :_destroy %>
		<%= link_to_remove_fields 'Eliminar programa', f, "delete fields__remove" %>
	</div>

</div>



<h3>#ESNOTICIA</h3>
<% @its_news.each do |hashtag| %>
	| <%= hashtag.article.name %> | 
	
<% end %>
<br/>

<% @highlights.each do |highlight| %>
	Posición: <%= highlight.order %>
	Artículo: <%= link_to highlight.article.name, highlight.article %>
<% end %>
<br/>

<%= render "/layouts/al_momento", section: al_momento(true, false, false, 5) %>

<% @sections.each do |section| %>
	<% if get_section_highlight(section.id) %>
		<%= render "/layouts/articles", section: get_articles_per_section(section.id, 3), section_name: section.name, highlight: get_section_highlight(section.id) %>
	<% else %>
		<%= render "/layouts/articles", section: get_articles_per_section(section.id, 4), section_name: section.name, highlight: get_section_highlight(section.id) %>
	<% end %>
<% end %> 


<%= render "/layouts/recommendations", articles: get_global_recommendations %>






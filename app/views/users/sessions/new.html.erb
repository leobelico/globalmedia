<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "session-form" }) do |f| %>
  <h2 class="title">Iniciar Sesi√≥n</h2>
  <div class="field field--string">
    <%= f.label :email %>
    <%= f.email_field :email, autofocus: true %>
  </div>

  <div class="field field--string">
    <%= f.label :password %>
    <%= f.password_field :password, autocomplete: "off" %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field field--checkbox">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end -%>

  <div class="actions">
    <%= f.submit "Log in" %>
    <%= render "users/shared/links" %>
  </div>
<% end %>

